<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingLeft="16dp" android:paddingRight="16dp"
              android:paddingBottom="4dp" android:paddingTop="4dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/news_item_title"
            android:textSize="18sp"
            android:singleLine="true" android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="280dp"
            android:id="@+id/news_item_image"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/news_item_desc" android:textSize="16sp" android:textColor="@android:color/black"/>
</LinearLayout>