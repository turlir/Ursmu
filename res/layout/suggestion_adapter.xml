<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="48dp" android:paddingLeft="4dp" android:paddingRight="4dp"
        >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suggestion_image" android:src="@drawable/white_social_group"
            android:layout_gravity="center_vertical"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
            android:id="@+id/suggestion_text" android:textSize="18sp" android:textColor="@android:color/white"
            android:layout_marginLeft="4dp" android:gravity="center|fill_horizontal"/>
</LinearLayout>