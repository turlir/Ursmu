<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@android:id/list" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:longClickable="true"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commonProgressBar" android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="false" android:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вы можете вопспользоваться оффлайн поиском"
            android:id="@+id/common_help" android:layout_centerHorizontal="true"
            android:layout_below="@+id/commonProgressBar" android:textSize="18sp"
            android:visibility="invisible" android:gravity="center_horizontal" android:linksClickable="true"/>
</RelativeLayout>