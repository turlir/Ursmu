<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true" android:id="@+id/relativeLayout" android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_schedule_prof" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:src="@drawable/new_backward" android:onClick="previous"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_schedule_prof"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/back_schedule_prof"
                android:src="@drawable/new_forward"
                android:onClick="next"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day_schedule_prof" android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/back_schedule_prof" android:textSize="18sp" android:onClick="current"
                android:clickable="true"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/professor_view_pager"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_below="@+id/relativeLayout" android:layout_marginTop="8dp"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_prof_bar" android:layout_centerHorizontal="true" android:layout_centerVertical="true"
            android:indeterminate="false" android:tag="TAG" android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_prof_desc"
            android:layout_below="@+id/schedule_prof_bar" android:textSize="18sp" android:visibility="visible"
            android:gravity="center_horizontal" android:layout_centerHorizontal="true"/>

</RelativeLayout>