<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="fill_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_card" android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TITLE"
                android:id="@+id/news_item_title" android:textColor="@android:color/black" android:paddingBottom="4dp"/>
        <ImageView
                android:layout_width="280dp"
                android:layout_height="160dp"
                android:id="@+id/news_item_image" android:layout_gravity="center_horizontal"
                android:paddingBottom="4dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/news_item_desc"
                android:textColor="@android:color/black" android:text="DESC" android:paddingBottom="4dp"/>
    </LinearLayout>

</FrameLayout>