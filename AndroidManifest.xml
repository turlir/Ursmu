<?xml version="1.0" encoding="utf-8"?>
<!--First Market Version-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.ursmu.beta.application"
          android:versionCode="5"
          android:versionName="1.0">
    <uses-sdk
            android:targetSdkVersion="15"
            android:minSdkVersion="8"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <permission android:name="ru.ursmu.beta.application.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="ru.ursmu.beta.application.permission.C2D_MESSAGE" />

    <supports-screens
            android:largeScreens="false"
            android:xlargeScreens="false"/>

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher"
                 android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name="ru.ursmu.application.Activity.MainActivity"
                  android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:screenOrientation="portrait" android:name="ru.ursmu.application.Activity.FindFacultyActivity"
                  android:label="Выберите факультет"/>
        <activity android:screenOrientation="portrait" android:name="ru.ursmu.application.Activity.FindKursActivity"
                  android:label="Выберите курс"/>
        <activity android:screenOrientation="portrait" android:name="ru.ursmu.application.Activity.FindGroupActivity"
                  android:label="Выберите группу"/>

        <activity android:screenOrientation="portrait"
                  android:name="ru.ursmu.application.Activity.GroupScheduleActivity" android:label="Группа">
        </activity>

        <activity android:screenOrientation="portrait"
                  android:name="ru.ursmu.application.Activity.ProfessorScheduleActivity" android:label="Профессор"/>
        <activity android:screenOrientation="portrait" android:name="ru.ursmu.application.Activity.NewsActivity"
                  android:label="Новости УГГУ"/>
        <activity android:name="ru.ursmu.application.Activity.ChairActivity" android:label="Кафедры"/>

        <service android:name="ru.ursmu.application.Activity.UrsmuService"/>

        <receiver
                android:name="ru.ursmu.application.Activity.GcmBroadcastReceiver"
                android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.pushApp" />
            </intent-filter>
        </receiver>
        <service android:name="ru.ursmu.application.Activity.GcmIntentService" />


        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />

    </application>
</manifest>
